#创建新的环境
conda create -n python3 python=3

#conda 环境和jupyter结合
conda 4.1版本之后带了nb_conda_kernels，只需要创建环境的时候带上ipykernel,如
conda create -n ppp python=3 ipykernel
python -m ipykernel install --user

#列出所有的环境
conda env list

#active某个环境
conda activate python3

#在某个环境安装软件
pip install flask --user

#deactiva某个环境
conda deactivate

#删除某个环境
conda remove -n python3 --all
